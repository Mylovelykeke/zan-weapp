/************************************
          今日头条样式
*************************************/
@import '/assets/fonts/iconfont.wxss';

.card-id{
  font-size: 16px;
  color: #0084ff;
}

.content :active {
  background: #d8d8d8;
}
rich-text {
   word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.vtu-news-single rich-text{
 -webkit-line-clamp: 2;
}

.vtu-title {
  font-weight: bolder;
  word-break: break-all;
  margin-bottom: 5px;
  box-sizing: border-box;
}

.vtu-news {
  padding: 15px 10px 10px 10px;
  margin-bottom: 5px;
  width: calc(100% - 20px);
  background-color: white;
  border-bottom: 1px solid #d8d8d8;
}

.vtu-news:last-child {
  border: 0px;
}

.vtu-news-user {
  width: 100%;
  float: left;
  margin-bottom: 10rpx;
}

.vtu-news-user-img {
  width: 30px;
  height: 30px;
  float: left;
}

.vtu-news-user-img image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.vtu-news-user-info {
  float: left;
  width: calc(100% - 110px);
  margin-left: 10px;
  height: 40px;
}

.vtu-news-user-btn {
  width: 60px;
  float: left;
  height: 25px;
  line-height: 25px;
  text-align: center;
  border-radius: 100px;
  font-size: 12px;
}

.vtu-news-user-info-name {
  width: 100%;
  height: 20px;
  font-size: 14px;
}

.vtu-news-single {
  width: 100%;
  height: auto;
  display: inline-block;
}
.fontsize{
  font-size: 14px;
}

.vtu-news-single-info {
  width: calc(100% - 105px);
  float: left;
}

.vtu-news-single-info-title, .vtu-news-many-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 20px;
  color: var(--font-ha);
  width: 100%;
}

.vtu-news-single-info-title {
  font-weight: bold;
}

.delect{
  height: 80rpx;
  line-height: 80rpx;
  color: #acaaaa;
}

.vtu-news-single-info-detail, .vtu-news-many-detail, .vtu-news-user-info-detail {
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: var(--font-hc);
}

.vtu-news-many-detail {
  position: relative;
  overflow: hidden;
}

.vtu-news-single-info-detail span, .vtu-news-many-detail span,
.vtu-news-user-info-detail span {
  margin-right: 5px;
  border-radius: 3px;
}

.vtu-news-single-img {
  width: 100px;
  height: 65px;
  float: right;
  position: relative;
  overflow: hidden;
  border-radius: 5px;
}


.vtu-news-single-img image, .vtu-news-many-img-li image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.vtu-news-many {
  width: 100%;
  height: auto;
  word-break: break-all;
  display: inline-block;
}

.vtu-news-many-img {
  width: 100%;
  display: flex;
  height: 80px;
  margin-bottom: 15px;
  margin-top: 5px;
}

.vtu-news-many-img-li {
  width: calc((100% - 10px) / 3);
  height: 80px;
  position: relative;
  overflow: hidden;
  margin-right: 5px;
  border-radius: 5px;
}

.vtu-news-many-img-li:last-child {
  margin: 0px;
}

.vtu-news-tool {
  width: 100%;
  height: 40px;
  line-height: 40px;
  display: inline-block;
  margin-top: 10px;
  border-top: 1px solid var(--border-bd);
}

.vtu-news-tool-li {
  width: 33.333%;
  height: 100%;
  text-align: center;
  font-size: 12px;
  color: var(--font-hc);
  display: inline-block;
}

.vtu-news-tool-li i {
  margin-right: 5px;
}

.setting {
  position: absolute;
  right: 5px;
  top: -5px;
}
.overTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.over {
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}