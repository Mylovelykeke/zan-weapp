/* pages/report/index.wxss */

.report_account, .report_type, .report {
  background-color: white;
  margin-bottom: 10px;
  padding: 10px;
}

.title {
  color: #666;
}

.content {
  position: relative;
  padding: 10px 0;
}

.scope {
  position: absolute;
  bottom: 20px;
  right: 5px;
  color: #666;
}

textarea {
  padding: 5px;
  box-sizing: border-box;
  width: 100%;
  height: 90px;
  border: 1px solid #f1f1f1;
}

.type_arr {
  padding: 10px 0;
}

.type_arr view {
  float: left;
  margin: 0 0 10px 10px;
  padding: 7px 10px;
  border: 1px solid #f1f1f1;
  font-size: 14px;
}

.type_arr .line {
  border: 1px solid rgb(25, 94, 243);
  color: rgb(25, 94, 243);
}

.clearfix:after, .clearfix:before {
  content: "";
  display: table;
}

.clearfix:after {
  clear: both;
}

.clearfix {
  zoom: 1;
}
.vtubtn{
  margin-top: 10px;
  padding: 0 10px; 
}