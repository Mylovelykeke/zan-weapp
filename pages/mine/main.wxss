/* pages/main/main.wxss */
.content{
  background: white;
}
.header {
  padding: 45px 20px 30px 20px;
  box-sizing: border-box;
  width: 100%;
  min-height: 90px;
  background: #f0d264;
}

.header .item_right {
  text-align: right;
}

.item_right  view:first-child {
  line-height: 30px;
  font-size: 12px;
}

.item_right span:last-child {
  padding: 2px 15px;
  border-radius: 5px;
  color: white;
  font-weight: 600;
  background: rgb(255, 218, 68);
}

.header_main {
  display: flex;
  justify-content: space-between;
}

.align {
  box-sizing: border-box;
  width: 100%;
  text-align: center;
  padding: 20px;
}

.auth {
  width: 60%;
  background: #1aad19;
  color: white;
  padding: 10px 0;
  border-radius: 5px;
  margin: 0 auto;
}

.item_msg {
  display: flex;
}

.item_img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}

.item_img image {
  width: 100%;
  height: 100%;
  vertical-align: center;
}

.item_name {
  padding-left: 10px;
  vertical-align: top;
}

.item_name view:first-child {
  line-height: 40px;
  font-weight: bold;
}

.item_name view:last-child {
  font-size: 12px;
  color: white;
}

.item_img, .item_name {
  display: inline-block;
}

.main-radius {
  position: relative;
  width: 100%;
  top: -15px;
  padding-top: 20px;
  border-radius: 20px;
  overflow: hidden;
  background-color: white;
  box-shadow: 0 -1px 0 #f1f1f1;
}

.history_order {
  display: flex;
}

.history_order view {
  flex: 1;
  margin: 10px;
  text-align: center;
  font-size: 12px;
  line-height: 36px;
  color: rgb(92, 88, 88);
}

.history_order view i {
  display: block;
  color: black;
  font-size: 20px;
  font-weight: bolder;
}

.history_order .iconfont {
  color: rgb(23, 226, 158);
  font-size: 26px;
}

.icon-daqia {
  color: rgb(69, 13, 173);
}

.icon-lianxikefu {
  color: rgb(19, 175, 53);
}

.icon-yijianfankui {
  color: rgb(12, 173, 194);
}

.icon-hezuo-tianchong {
  color: rgb(248, 101, 43);
}

.icon-shezhi {
  color: rgb(155, 153, 144);
}

.tag {
  color: rgb(172, 169, 169);
  font-size: 12px;
  vertical-align: top;
}

.price {
  display: flex;
  padding: 10px;
}

.price view {
  flex: 1;
  line-height: 26px;
  text-align: center;
}

.price .price_line {
  border-right: 1px solid #eee;
}

.price .price_big {
  color: rgb(255, 218, 68);
  font-weight: bolder;
  font-size: 20px;
}

.price  span {
  color: #ccc;
  font-size: 14px;
}
