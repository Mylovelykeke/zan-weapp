.dateTime {
  width: 60px;
  padding: 10px;
}

.dateTime span:first-child {
  color: #666;
}

.rule {
  position: relative;
  top: 5px;
  font-size: 20px;
}

.dateTime span:last-child {
  position: relative;
  top: 15px;
  font-size: 20px;
  font-weight: bold;
}

.card {
}

.card .card-content {
  word-break: break-all;
  width: 100%;
  background: white;
  padding: 20rpx 15rpx;
  margin: 10rpx 0;
  box-sizing: border-box;
  box-shadow: 0 1px 2px #cfcfcf;
}

.card-title {
  font-weight: bold;
  line-height: 30px;
}

.card-footer {
  display: flex;
  font-size: 12px;
  color: var(--font-hc);
}

.card-footer view {
  margin-right: 10px;
}
