.dateTime {
  width: 60px;
  padding: 10px;
}

.dateTime span:first-child {
  color: #666;
}

.rule {
  position: relative;
  top: 5px;
  font-size: 20px;
}

.dateTime span:last-child {
  position: relative;
  top: 15px;
  font-size: 20px;
  font-weight: bold;
}


.card .card-content {
  word-break: break-all;
  width: 100%;
  background: white;
  padding: 10px 15rpx 10px 15rpx;
  margin: 10rpx 0;
  box-sizing: border-box;
  box-shadow: 0 1px 2px #cfcfcf;
}
.card-content:active {
  background: #e6e6e6;
}

.card-title {
  font-weight: bold;
  line-height: 30px;
}

.card-footer {
  margin-top: 10px;
  display: flex;
  font-size: 14px;
  color: var(--font-hc);
}

.card-footer view {
  margin-right: 10px;
}

.setting{
  flex: 1;
  text-align: right;
}
.setting  .iconfont{
  font-size: 14px;
  color: #666;
}
