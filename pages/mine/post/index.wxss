.dateTime {
  width: 60px;
  padding: 10px;
}

.card-id {
  font-size: 16px;
  color: #0084ff;
}

.dateTime span:first-child {
  color: #666;
}

.rule {
  position: relative;
  top: 5px;
  font-size: 20px;
}

.dateTime span:last-child {
  position: relative;
  top: 15px;
  font-size: 20px;
  font-weight: bold;
}

.card .card-content {
  font-size: 14px;
  word-break: break-all;
  width: 100%;
  background: white;
  padding: 10px 15rpx 10px 15rpx;
  margin: 10rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #cfcfcf;
}

.card-content.flag:active {
  background: #e6e6e6;
}

.card-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
  line-height: 30px;
}

.card-footer {
  margin-top: 10px;
  display: flex;
  font-size: 14px;
  color: var(--font-hc);
}

.card-footer view {
  margin-right: 10px;
}

.setting {
  flex: 1;
  text-align: right;
}

.setting  .iconfont {
  font-size: 14px;
  color: #666;
}

.prop-content {
  padding-top: 20px;
  /* width: 100%;
  height: 200px;
  line-height: 200px;
  text-align: center;
  font-size: 14px; */
}

.cell {
  display: flex;
  padding: 10px;
  align-items: center;
  vertical-align: middle;
}

.iconfont {
  width: 30px;
  height: 30px;
  font-size: 18px;
  line-height: 30px;
}

.red {
  color: rgb(226, 6, 6);
}

.like {
  color: rgb(231, 101, 25);
}

.vtu-news-many-img {
  width: 100%;
  display: flex;
  height: 80px;
  margin-bottom: 15px;
  margin-top: 5px;
}

.vtu-news-many-img-li {
  width: calc((100% - 10px) / 3);
  height: 80px;
  position: relative;
  overflow: hidden;
  margin-right: 5px;
  border-radius: 5px;
}

.vtu-news-many-img-li image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.btn {
  margin-left: 0;
  padding: 0;
  background: none;
  width: 100%;
  text-align: left;
  font-size: 16px;
}

.btn::after {
  border: 0 none;
}
