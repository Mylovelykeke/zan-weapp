/* pages/msg/main.wxss */

.notice {
  border-bottom: 10px solid #f1f1f1;
}

.i-swipeout-image {
  width: 40px;
  float: left;
  color: rgb(243, 173, 93);
}

.i-swipeout-image image {
  width: 35px;
  height: 35px;
}

.i-swipeout-des-h2 {
  display: flex;
  justify-content: space-between;
}

.i-swipeout-des-h2 :first-child {
  font-size: 14px;
  font-weight: bolder;
}

.i-swipeout-des-h2 :last-child {
  font-size: 12px;
  color: #666;
}

.notice-img {
  width: 40px;
  height: 40px;
  padding: 0;
  border: 0;
}

.notice-img.dy {
  width: 50px;
  height: 50px;
  margin-left: -5px;
}
